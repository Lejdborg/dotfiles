" ------------------------------------------------------------------------------
" Basic settings
" ------------------------------------------------------------------------------

set guioptions=aAce
set guioptions-=T

" Set Solarized dark color theme
set background=dark
color solarized

" ------------------------------------------------------------------------------
" Autocmd
" ------------------------------------------------------------------------------

" Reload configuration files on save
if has("autocmd")
  autocmd bufwritepost .gvimrc source $MYGVIMRC
endif

" ------------------------------------------------------------------------------
" MacVim settings
" ------------------------------------------------------------------------------

if has("gui_macvim")
  " Fullscreen takes up entire screen
  set fuoptions=maxhorz,maxvert
endif
