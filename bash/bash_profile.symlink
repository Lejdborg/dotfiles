# rbenv
if [ -d "$HOME/.rbenv" ]; then
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init -)"
fi

# add ~/.bin/ to PATH
export PATH="$HOME/.bin:$PATH"

# aliases
source ~/.bash/aliases.sh

# git
source ~/.bash/git-completion.bash
source ~/.bash/git.sh

# files and directories
source ~/.bash/files.sh

if [ -f "$HOME/.bash_local" ]; then
  source ~/.bash_local
fi
